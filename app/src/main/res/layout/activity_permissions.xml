<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5dad07"
    tools:context="creatlab.dviratis.PermissionsActivity"
    tools:layout_editor_absoluteY="81dp">

    <fragment
        android:id="@+id/PermissionFragment"
        android:name="creatlab.dviratis.HelpFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="27dp" />


    <Button
        android:id="@+id/bntPermissionOkay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/ok"
        android:onClick="RunCheck"/>


    <View
        android:id="@+id/viewSend"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#5dae06" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_above="@+id/bntPermissionOkay"
        android:layout_alignStart="@+id/bntPermissionOkay"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp"
        android:src="@drawable/attention_mark" />


</RelativeLayout>
