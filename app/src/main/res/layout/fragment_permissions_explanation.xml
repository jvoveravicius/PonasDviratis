<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0ede5 "
    tools:context="creatlab.dviratis.PermissionsExplanationFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:text="Sis permissionas yra butinas, norint naudotis programa,
        kol nebus permissionas
        aktyvuotas, programa naudotis negalesite"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp" />

    android:layout_alignTop="@+id/ExplanationTextView"
    android:layout_below="@+id/ExplanationTextView"
    android:layout_toEndOf="@+id/radio"



    <TextView
        android:id="@+id/ExplanationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/closeSendActivity"
        android:layout_alignStart="@+id/buckysImageView"
        android:maxWidth="280dp"
        android:maxHeight="10dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/MainTextView"
        android:maxWidth="280dp"
        android:maxHeight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ExplanationTextView"
        android:layout_below="@+id/closeSendActivity"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="12sp" />










</RelativeLayout>
