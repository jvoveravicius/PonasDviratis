<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e1d5"
    tools:context="creatlab.dviratis.NoInternetFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="50dp"
        android:text="Dėmesio!"
        android:textColor="@android:color/black"
        android:textSize="50sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="150dp"
        android:text="Norėdami naudotis programėlę, turite suteikti, Jūsų mobiliajam įrenginiui, interneto prieeigą. Tai reikalinga tam, kad galėtumėte naudotis žemėlapiu."
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp" />

</FrameLayout>
